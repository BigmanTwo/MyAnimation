<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.asus.myanimation.MainActivity">

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/obj_but"
       android:text="单一属性动画"/>
    <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/pve_but"
       android:text="pve属性动画"/>
    <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/set_but"
       android:text="set属性动画"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_test"
        android:src="@mipmap/ph1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_but"
        android:text="跳转"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_but"
        android:text="view加载动画载入"/>
</LinearLayout>
